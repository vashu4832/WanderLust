<% layout("/layouts/boilerplate") %>
<style>
  /* Filters Section */
  #filters {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    padding: 0.5rem 1rem;
    scrollbar-width: thin; /* Firefox */
    background: #fff; /* Sticky needs background */
    position: sticky; /* Makes it stick */
    top: 0; /* Sticks to top */
    z-index: 1000; /* Keeps above content */
    border-bottom: 1px solid #eee;
  }

  #filters .filter {
    flex: 0 0 auto;
    text-align: center;
    cursor: pointer;
  }

  #filters .filter div {
    font-size: 1.5rem;
    margin-bottom: 0.3rem;
  }

  #filters::-webkit-scrollbar {
    height: 6px;
  }
  #filters::-webkit-scrollbar-thumb {
    background: #ccc;
    border-radius: 10px;
  }

  /* Listings Cards */
  .listing-link {
    text-decoration: none;
    color: inherit;
  }

  .listing-card {
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 1rem;
    transition: transform 0.2s ease;
  }

  .listing-card:hover {
    transform: scale(1.02);
  }

  .listing-card img {
    object-fit: cover;
    width: 100%;
    height: 16rem;
  }

  .card-body {
    font-size: 0.9rem;
  }

  /* Tax Toggle Styling */
  .tax-toggle {
    margin-left: auto; /* Push to the right */
    display: flex;
    align-items: center;
    white-space: nowrap; /* Prevents text from breaking into next line */
  }

  .tax-toggle .form-check-label {
    font-size: 0.9rem;
    margin-left: 0.5rem;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    #filters {
      gap: 0.7rem;
    }
    #filters .filter div {
      font-size: 1.2rem;
    }
    #filters .filter p {
      font-size: 0.8rem;
    }
    .listing-card img {
      height: 12rem;
    }
    .card-body {
      font-size: 0.8rem;
    }
    .tax-toggle .form-check-label {
      font-size: 0.8rem;
    }
    .tax-toggle input[type="checkbox"] {
      transform: scale(0.9); /* Slightly smaller toggle on mobile */
    }
  }

  @media (max-width: 480px) {
    #filters {
      gap: 0.5rem;
    }
    #filters .filter div {
      font-size: 1rem;
    }
    #filters .filter p {
      font-size: 0.7rem;
    }
    .listing-card img {
      height: 10rem;
    }
    .card-body {
      font-size: 0.75rem;
    }
  }
</style>

<div id="filters">
  <div class="filter">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Iconic Cities</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-mountain"></i></div>
    <p>Mountains</p>
  </div>
  <div class="filter">
    <div><i class="fa-brands fa-fort-awesome"></i></div>
    <p>Castles</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Amazing Pools</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-campground"></i></div>
    <p>Campaing</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-cow"></i></div>
    <p>Farms</p>
  </div>
  <div class="filter">
    <div><i class="fa-regular fa-snowflake"></i></div>
    <p>Arctic</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-igloo"></i></div>
    <p>Domes</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-ship"></i></div>
    <p>Boats</p>
  </div>
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="flexSwitchCheckDefault"
      />
      <label class="form-check-label" for="flexSwitchCheckDefault"
        >Display total after taxes</label
      >
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for(let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing-image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br />
          &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
          <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>

<script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      if (taxSwitch.checked) {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
